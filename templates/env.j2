# See: https://github.com/convertx-org/convertx/blob/main/.env.example

# Instance-specific settings
# Enable SFW-only mode for the instance
REDLIB_SFW_ONLY={{ convertx_environment_variables_convertx_sfw_only }}
# Set a banner message for the instance
REDLIB_BANNER={{ convertx_environment_variables_convertx_banner }}
# Disable search engine indexing
REDLIB_ROBOTS_DISABLE_INDEXING={{ convertx_environment_variables_convertx_robots_disable_indexing }}
# Set the Pushshift frontend for "removed" links
REDLIB_PUSHSHIFT_FRONTEND={{ convertx_environment_variables_convertx_pushshift_frontend }}

# Default user settings
# Set the default theme (options: system, light, dark, black, dracula, nord, laserwave, violet, gold, rosebox, gruvboxdark, gruvboxlight)
REDLIB_DEFAULT_THEME={{ convertx_environment_variables_convertx_default_theme }}
# Set the default front page (options: default, popular, all)
REDLIB_DEFAULT_FRONT_PAGE={{ convertx_environment_variables_convertx_default_front_page }}
# Set the default layout (options: card, clean, compact)
REDLIB_DEFAULT_LAYOUT={{ convertx_environment_variables_convertx_default_layout }}
# Enable wide mode by default
REDLIB_DEFAULT_WIDE={{ convertx_environment_variables_convertx_default_wide }}
# Set the default post sort method (options: hot, new, top, rising, controversial)
REDLIB_DEFAULT_POST_SORT={{ convertx_environment_variables_convertx_default_post_sort }}
# Set the default comment sort method (options: confidence, top, new, controversial, old)
REDLIB_DEFAULT_COMMENT_SORT={{ convertx_environment_variables_convertx_default_comment_sort }}
# Enable blurring Spoiler content by default
REDLIB_DEFAULT_BLUR_SPOILER={{ convertx_environment_variables_convertx_default_blur_spoiler }}
# Enable showing NSFW content by default
REDLIB_DEFAULT_SHOW_NSFW={{ convertx_environment_variables_convertx_default_show_nsfw }}
# Enable blurring NSFW content by default
REDLIB_DEFAULT_BLUR_NSFW={{ convertx_environment_variables_convertx_default_blur_nsfw }}
# Enable HLS video format by default
REDLIB_DEFAULT_USE_HLS={{ convertx_environment_variables_convertx_default_use_hls }}
# Hide HLS notification by default
REDLIB_DEFAULT_HIDE_HLS_NOTIFICATION={{ convertx_environment_variables_convertx_default_hide_hls_notification }}
# Disable autoplay videos by default
REDLIB_DEFAULT_AUTOPLAY_VIDEOS={{ convertx_environment_variables_convertx_default_autoplay_videos }}
# Define a default list of subreddit subscriptions (format: sub1+sub2+sub3)
REDLIB_DEFAULT_SUBSCRIPTIONS={{ convertx_environment_variables_convertx_default_subscriptions }}
# Define a default list of subreddit filters (format: sub1+sub2+sub3)
REDLIB_DEFAULT_FILTERS={{ convertx_environment_variables_convertx_default_filters }}
# Hide awards by default
REDLIB_DEFAULT_HIDE_AWARDS={{ convertx_environment_variables_convertx_default_hide_awards }}
# Hide sidebar and summary
REDLIB_DEFAULT_HIDE_SIDEBAR_AND_SUMMARY={{ convertx_environment_variables_convertx_default_hide_sidebar_and_summary }}
# Disable the confirmation before visiting Reddit
REDLIB_DEFAULT_DISABLE_VISIT_REDDIT_CONFIRMATION={{ convertx_environment_variables_convertx_default_disable_visit_reddit_confirmation }}
# Hide score by default
REDLIB_DEFAULT_HIDE_SCORE={{ convertx_environment_variables_convertx_default_hide_score }}
# Enable fixed navbar by default
REDLIB_DEFAULT_FIXED_NAVBAR={{ convertx_environment_variables_convertx_default_fixed_navbar }}

{{ convertx_environment_variables_additional_variables }}
